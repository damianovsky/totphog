{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 d-flex align-items-center">
            <img src="/favicon.svg" alt="TOTPHog" width="32" height="32" class="me-2">
            TOTPHog
        </h1>
        <div>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addModal">
                <i class="bi bi-plus-lg me-1"></i>Add Token
            </button>
            <button class="btn btn-outline-danger ms-2" onclick="deleteAll()">
                <i class="bi bi-trash"></i>
            </button>
        </div>
    </div>

    <div class="row g-3" id="tokens">
        {% if tokens is empty %}
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center py-5 text-muted">
                    <i class="bi bi-key display-4 mb-3 d-block"></i>
                    <h5>No TOTP tokens yet</h5>
                    <p class="mb-0">Add a token using the button above or via API</p>
                </div>
            </div>
        </div>
        {% else %}
            {% for token in tokens %}
            <div class="col-md-6 col-lg-4" data-id="{{ token.id }}">
                <div class="card token-card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <h6 class="card-title mb-0">{{ token.name }}</h6>
                                <small class="text-muted">{{ token.issuer }}</small>
                            </div>
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-outline-secondary copy-btn" onclick="copyCode(this)" title="Copy">
                                    <i class="bi bi-clipboard"></i>
                                </button>
                                <button class="btn btn-outline-danger" onclick="deleteToken('{{ token.id }}')" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                        <div class="code-display text-primary fw-bold" data-token-id="{{ token.id }}">
                            {{ token.current_code.code }}
                        </div>
                        <div class="progress mt-2" role="progressbar">
                            <div class="progress-bar" data-period="{{ token.period }}" data-remaining="{{ token.current_code.remaining_seconds }}" style="width: {{ (token.current_code.remaining_seconds / token.period * 100)|round }}%"></div>
                        </div>
                        <small class="text-muted timer" data-remaining="{{ token.current_code.remaining_seconds }}">{{ token.current_code.remaining_seconds }}s</small>
                    </div>
                </div>
            </div>
            {% endfor %}
        {% endif %}
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <i class="bi bi-code-slash me-2"></i>API Endpoints
        </div>
        <div class="card-body">
            <table class="table table-sm mb-0">
                <tbody>
                    <tr><td><code>GET /api/v1/tokens</code></td><td>List all tokens</td></tr>
                    <tr><td><code>POST /api/v1/tokens</code></td><td>Add token</td></tr>
                    <tr><td><code>GET /api/v1/tokens/{id}/code</code></td><td>Get current code</td></tr>
                    <tr><td><code>GET /api/v1/codes</code></td><td>Get all codes</td></tr>
                    <tr><td><code>DELETE /api/v1/tokens/{id}</code></td><td>Delete token</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Token Modal -->
<div class="modal fade" id="addModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add TOTP Token</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs mb-3" role="tablist">
                    <li class="nav-item">
                        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-manual">Manual</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-uri">From URI</button>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab-manual">
                        <form id="manualForm" onsubmit="addManual(event)">
                            <div class="mb-3">
                                <label class="form-label">Name *</label>
                                <input type="text" class="form-control" name="name" required placeholder="e.g. GitHub Account">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Secret Key *</label>
                                <input type="text" class="form-control" name="secret" required placeholder="Base32 encoded secret">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Issuer</label>
                                <input type="text" class="form-control" name="issuer" placeholder="e.g. GitHub">
                            </div>
                            <button type="submit" class="btn btn-primary">Add Token</button>
                        </form>
                    </div>
                    <div class="tab-pane fade" id="tab-uri">
                        <form id="uriForm" onsubmit="addFromUri(event)">
                            <div class="mb-3">
                                <label class="form-label">OTPAuth URI *</label>
                                <textarea class="form-control" name="uri" rows="3" required placeholder="otpauth://totp/..."></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Add Token</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
async function addManual(e) {
    e.preventDefault();
    const form = e.target;
    const data = {
        name: form.name.value,
        secret: form.secret.value,
        issuer: form.issuer.value || 'TOTPHog'
    };
    
    const res = await fetch('/api/v1/tokens', {
        method: 'POST',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify(data)
    });
    
    if (res.ok) {
        location.reload();
    } else {
        const err = await res.json();
        alert(err.error || 'Failed to add token');
    }
}

async function addFromUri(e) {
    e.preventDefault();
    const form = e.target;
    const data = { uri: form.uri.value };
    
    const res = await fetch('/api/v1/tokens', {
        method: 'POST',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify(data)
    });
    
    if (res.ok) {
        location.reload();
    } else {
        const err = await res.json();
        alert(err.error || 'Failed to add token');
    }
}

async function deleteToken(id) {
    if (!confirm('Delete this token?')) return;
    await fetch(`/api/v1/tokens/${id}`, { method: 'DELETE' });
    location.reload();
}

async function deleteAll() {
    if (!confirm('Delete ALL tokens?')) return;
    await fetch('/api/v1/tokens', { method: 'DELETE' });
    location.reload();
}

function copyCode(btn) {
    const code = btn.closest('.card').querySelector('.code-display').textContent.trim();
    navigator.clipboard.writeText(code);
    btn.innerHTML = '<i class="bi bi-check"></i>';
    setTimeout(() => btn.innerHTML = '<i class="bi bi-clipboard"></i>', 1000);
}

// Auto-refresh codes
setInterval(async () => {
    const res = await fetch('/api/v1/codes');
    const data = await res.json();
    
    if (data.success && data.data.length > 0) {
        data.data.forEach(token => {
            const card = document.querySelector(`[data-id="${token.id}"]`);
            if (!card || !token.current_code) return;
            
            const codeEl = card.querySelector('.code-display');
            const timerEl = card.querySelector('.timer');
            const progressEl = card.querySelector('.progress-bar');
            
            codeEl.textContent = token.current_code.code;
            timerEl.textContent = token.current_code.remaining_seconds + 's';
            
            const pct = (token.current_code.remaining_seconds / token.period) * 100;
            progressEl.style.width = pct + '%';
            progressEl.classList.toggle('bg-danger', token.current_code.remaining_seconds <= 5);
        });
    }
}, 1000);
</script>
{% endblock %}
